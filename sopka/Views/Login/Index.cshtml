@model sopka.Controllers.LoginModel

@{
  Layout = "_LoginLayout";
}

<style>
  .login-validation-summary ul {
    list-style-type: none;
    padding-left: 0px;
  }
</style>

<div>

  <h1 class="logo-name">SPK</h1>

</div>
<h3>Вход в систему</h3>
<form class="m-t" role="form" asp-action="Index" method="post">
  <div class="form-group">
    <input class="form-control" asp-for="Email">
    <span asp-validation-for="Email" class="text-danger"></span>
  </div>
  <div class="form-group">
    <input type="password" class="form-control"  asp-for="Password">
    <span asp-validation-for="Password" class="text-danger"></span>
  </div>
  <div asp-validation-summary="ModelOnly" class="login-validation-summary text-danger"></div>
  <button type="submit" class="btn btn-primary block full-width m-b">Войти</button>

  <a href="#"><small>Проблемы со входом?</small></a>
</form>